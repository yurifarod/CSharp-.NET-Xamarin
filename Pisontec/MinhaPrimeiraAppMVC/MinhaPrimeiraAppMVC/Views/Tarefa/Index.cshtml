@model IEnumerable<MinhaPrimeiraAppMVC.Models.Tarefas>

@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table align="center" class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lista.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concluida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativa)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lista.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Concluida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativa)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TarefaId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TarefaId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TarefaId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
