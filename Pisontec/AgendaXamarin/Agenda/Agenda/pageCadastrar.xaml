<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.pageCadastrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cadastro de Contatos" HorizontalTextAlignment="Center" FontSize="Medium"/>
            <Label Text="Nome"/>
            <Entry x:Name="txtNome" Keyboard="Email" Placeholder="Digite seu nome"/>
            <Label Text="E-mail"/>
            <Entry x:Name="txtEmail" Keyboard="Email" Placeholder="Digite seu e-mail"/>
            <Label Text="Celular"/>
            <Entry  x:Name="txtCelular" Keyboard="Email" Placeholder="Digite sua número celular" />
            <Button x:Name="btSalvar" Text="Salvar"  Clicked="Salvar"/>
            <Button x:Name="btVoltar" Text="Voltar"  Clicked="Voltar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>