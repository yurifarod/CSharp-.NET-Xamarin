<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Campus.UI.Site</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/_AdminLTE/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/_AdminLTE/dist/css/AdminLTE.css" />
        <link rel="stylesheet" href="~/_AdminLTE/dist/css/skins/_all-skins.css" />
        <link rel="stylesheet" href="~/_AdminLTE/plugins/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/_AdminLTE/plugins/ionicons/css/ionicons.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/_AdminLTE/bootstrap/css/bootstrap.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/_AdminLTE/dist/css/AdminLTE.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/_AdminLTE/dist/css/skins/_all-skins.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/_AdminLTE/plugins/font-awesome/css/font-awesome.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/_AdminLTE/plugins/ionicons/css/ionicons.css" asp-append-version="true" />
    </environment>
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition skin-blue sidebar-mini">
   
    <div class="wrapper">   

        <!-- Main Header -->
        @await Html.PartialAsync("~/Views/Shared/AdminLTE/_Header.cshtml")
        <!-- Left side column. contains the logo and sidebar -->
        @await Html.PartialAsync("~/Views/Shared/AdminLTE/_Menu.cshtml")

        <!-- Content Wrapper. Contains page content -->
        @await Html.PartialAsync("~/Views/Shared/AdminLTE/_Container.cshtml")

        @RenderBody()

        @await Html.PartialAsync("~/Views/Shared/AdminLTE/_Footer.cshtml")
        
        @*await Html.PartialAsync("~/Views/Shared/AdminLTE/_Sidebar.cshtml")*@

    </div>
    <environment include="Development">
        <script src="~/_AdminLTE/plugins/jquery/js/jquery.js"></script>
        <script src="~/_AdminLTE/bootstrap/js/bootstrap.js"></script>
        <script src="~/_AdminLTE/dist/js/adminlte.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/_AdminLTE/plugins/jquery/js/jquery.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/_AdminLTE/bootstrap/js/bootstrap.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/_AdminLTE/dist/js/adminlte.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
